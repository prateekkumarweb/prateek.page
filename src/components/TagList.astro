---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-4 py-2 text-base">
  {
    tags.map((tag) => (
      <div class="rounded-full bg-gray-300 text-gray-700 font-semibold">
        <a href={"/tag/" + tag + "/"} class="px-2 inline-block">{`#${tag}`}</a>
      </div>
    ))
  }
</div>
