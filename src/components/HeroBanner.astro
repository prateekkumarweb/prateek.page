---
import { Picture } from "@astrojs/image/components";
import IconLogosRust from "~icons/logos/rust";
import IconLogosJavaScript from "~icons/logos/javascript";

const profileImageUrl = "https://static.prateek.page/images/profile.jpg";
---

<div class="flex gap-16 items-center flex-col md:flex-row">
  <Picture
    src={profileImageUrl}
    alt="Prateek Kumar"
    sizes="(max-width: 384px) 100vw, 384px"
    widths={[256, 384, 656]}
    aspectRatio="1:1"
    class="rounded-full"
    loading="eager"
  />
  <div class="flex-grow">
    <h1 class="text-4xl font-extrabold">Prateek Kumar</h1>
    <p>
      Software Engineer<br />
      Rust <IconLogosRust />
      and JavaScript <IconLogosJavaScript />
    </p>
  </div>
</div>
